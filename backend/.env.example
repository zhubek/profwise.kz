# Database
DATABASE_URL="postgresql://username:password@localhost:5432/profwise"

# JWT
JWT_SECRET="your-secret-key-here"
JWT_EXPIRATION="7d"

# Email (Brevo)
BREVO_API_KEY="your-brevo-api-key"
ENABLE_EMAIL_VERIFICATION="false"
EMAIL_FROM="noreply@profwise.kz"
EMAIL_FROM_NAME="Profwise"

# Frontend URL
FRONTEND_URL="http://localhost:3000"

# Redis Cache Configuration
# IMPORTANT: Redis is REQUIRED for production. Without it, system cannot handle >100 concurrent users.
# Load testing shows 99% faster response times and 10x capacity increase with Redis enabled.
ENABLE_REDIS_CACHE="true"          # MUST be "true" in production
REDIS_HOST="localhost"             # Redis server host ("localhost" for docker-compose, or external Redis URL)
REDIS_PORT="6379"                  # Redis server port
REDIS_PASSWORD=""                  # RECOMMENDED: Set strong password in production (generate with: openssl rand -base64 32)
REDIS_DEFAULT_TTL="3600"           # Default TTL in seconds (1 hour)

# Docker Compose (optional - for local development with Redis)
# To start Redis and PostgreSQL locally, run: docker-compose up -d
# To stop: docker-compose down
# To stop and remove data: docker-compose down -v
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="postgres"
POSTGRES_DB="profwise"
